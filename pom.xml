<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.5</version> <!-- Upgraded Spring Boot version -->
        <relativePath/>
    </parent>

    <groupId>tn.esprit.spring</groupId>
    <artifactId>gestion-station-ski</artifactId>
    <version>1.0</version>
    <name>gestion-station-ski</name>
    <description>Demo project for Spring Boot</description>

    <properties>
        <java.version>17</java.version>
        <maven-jar-plugin.version>3.1.1</maven-jar-plugin.version>
        <!-- Ensure Maven plugin versions are specified to avoid conflicts -->
        <sonar.host.url>http://192.168.56.10:9000</sonar.host.url> <!-- SonarQube Server URL -->
    </properties>

    <dependencies>
        <!-- Spring Boot Starter Web -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <!-- Spring Boot Starter Data JPA -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

        <!-- Spring Boot Starter Test -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Lombok (Upgraded version) -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.30</version>
            <scope>provided</scope>
        </dependency>

        <!-- H2 Database (Updated to stable version) -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>2.3.232</version> <!-- Updated to a stable version -->
            <scope>runtime</scope>
        </dependency>

        <!-- SpringDoc OpenAPI (Updated version) -->
        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-ui</artifactId>
            <version>1.7.0</version> <!-- Updated version -->
        </dependency>

        <!-- Swagger UI (if needed) -->
        <dependency>
            <groupId>org.webjars</groupId>
            <artifactId>swagger-ui</artifactId>
            <version>4.19.0</version> <!-- Updated version -->
        </dependency>
    </dependencies>

    <repositories>
        <!-- Add Maven Central repository if not already there -->
        <repository>
            <id>central</id>
            <url>https://repo.maven.apache.org/maven2/</url>
        </repository>
    </repositories>

    <build>
       <plugins>
    <!-- Spring Boot Maven Plugin -->
    <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
            <mainClass>tn.esprit.spring.GestionStationSkiApplication</mainClass>
            <excludes>
                <exclude>
                    <groupId>org.projectlombok</groupId>
                    <artifactId>lombok</artifactId>
                </exclude>
            </excludes>
        </configuration>
    </plugin>

    <!-- SonarQube Maven Plugin (Updated version) -->
    <plugin>
        <groupId>org.sonarsource.scanner.maven</groupId>
        <artifactId>sonar-maven-plugin</artifactId>
        <version>3.9.1.2184</version> <!-- Upgraded SonarQube plugin -->
        <configuration>
            <sonar.host.url>${sonar.host.url}</sonar.host.url> <!-- Reference SonarQube URL from properties -->
        </configuration>
    </plugin>

    <!-- OWASP Dependency-Check Plugin (Updated version) -->
    <plugin>
        <groupId>org.owasp</groupId>
        <artifactId>dependency-check-maven</artifactId>
        <version>8.2.1</version>
        <configuration>
            <failBuildOnCVSS>7</failBuildOnCVSS> <!-- Fail build on high CVSS scores -->
            <dataDirectory>${project.build.directory}/dependency-check-data</dataDirectory> <!-- Cache CVE data -->
        </configuration>
    </plugin>

    <!-- JaCoCo Plugin for Code Coverage -->
    <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>0.8.8</version>
        <executions>
            <execution>
                <goals>
                    <goal>prepare-agent</goal> <!-- This will instrument classes for coverage -->
                    <goal>test</goal>           <!-- This will run tests -->
                    <goal>report</goal>         <!-- This will generate the report after tests -->
                </goals>
                <configuration>
                    <!-- JaCoCo Coverage Report Configuration -->
                    <outputDirectory>${project.build.directory}/jacoco-report</outputDirectory> <!-- Report location -->
                    <rules>
                        <rule>
                            <element>CLASS</element>
                            <includes>
                                <include>*</include> <!-- Apply to all classes -->
                            </includes>
                            <limits>
                                <limit>
                                    <counter>LINE</counter>
                                    <value>COVEREDRATIO</value>
                                    <minimum>0.80</minimum> <!-- 80% line coverage -->
                                </limit>
                            </limits>
                        </rule>
                    </rules>
                </configuration>
            </execution>
        </executions>
    </plugin>

</plugins>

    </build>

    <distributionManagement>
        <repository>
            <id>deploymentRepo</id>
            <name>Nexus Repository</name>
            <url>http://192.168.56.10:8081/repository/maven-releases/</url>
        </repository>
    </distributionManagement>

</project>
